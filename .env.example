# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Google Drive API Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Optional: Service Account (alternative to OAuth)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=your_private_key

# Database
DB_PATH=./data/users.json

# Server Configuration
PORT=3000
NODE_ENV=development

# Bot API Configuration for large files
# Set this to true to use local Bot API server
# Benefits: 2GB file size limit, streaming uploads (no memory bottleneck), faster performance
USE_LOCAL_BOT_API=false

# Local Bot API server URL (default: http://localhost:8081)
BOT_API_SERVER=http://localhost:8081