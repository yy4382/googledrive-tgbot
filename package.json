{
  "name": "gdrive-telegram-bot",
  "version": "1.0.0",
  "description": "A Telegram bot that uploads files to Google Drive using Grammy",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env.dev src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "bot",
    "grammy",
    "google-drive",
    "file-upload"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@grammyjs/files": "^1.1.1",
    "dotenv": "^16.4.5",
    "google-auth-library": "^10.2.1",
    "googleapis": "^144.0.0",
    "grammy": "^1.37.0",
    "lowdb": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "tsx": "^4.19.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
